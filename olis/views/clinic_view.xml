							<field name="remise" attrs="{'readonly': [('state', '!=', 'brouillon')]}" invisible="1"/>
							<field name="state" invisible="1"/>

                        </group>
                        <group>
						    <field name="idassurance" invisible="1"/>
							<field name="idsociete" invisible="1"/>
						    <field name="numrecu" attrs="{'readonly': [('state', '!=', 'brouillon')]}" invisible="1"/>
						    <field name="montant"/>
						    <field name="nompatient"/>
							<field name="montantass" invisible="1"/>
							<field name="montantpatient" invisible="1"/>
                        </group>
                      </group>
                    <notebook>
                        <page string="Elements de L Operation">
                            <field name="ligne_opcaisse" nolabel="1"  attrs="{'readonly': [('state', '!=', 'brouillon')]}">
