<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Formulaires  -->
       <record id="view_clinic_pricelistitem_form" model="ir.ui.view">
            <field name="name">Pricelist.ext</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//notebook//page[@name='sales']//group//group//div//field[@name='item_ids']//tree//field[@name='fixed_price']" position="after">
                  <field name="plafond"/>   
                </xpath>
            </field>
        </record>
       <record id="view_clinic_category_form" model="ir.ui.view">
            <field name="name">Category.ext</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="before">
                  <field name="code"/>
                  <field name="ordre"/>   
                </xpath>
            </field>
        </record>
<record id="clinic_patient_tree" model="ir.ui.view">
	         <field name="name">clinic.patient.tree</field>
             <field name="model">clinic.patient</field>
             <field name="arch" type="xml">
	         <tree string="patients">
							<field name="name"/>
							<field name="nom"/>
							<field name="prenom"/>
							<field name="dob"/>
							<field name="phone"/>

                </tree>
			</field>
	     </record>
		 <record id="clinic_patient_search" model="ir.ui.view">
	         <field name="name">clinic.patient.search</field>
             <field name="model">clinic.patient</field>
             <field name="arch" type="xml">
	         <search string="patients">
							<field name="nom"/>

                </search>
			</field>
	     </record>
<record id="clinic_patient_form" model="ir.ui.view">
	         <field name="name">clinic.patient.form</field>
             <field name="model">clinic.patient</field>
             <field name="arch" type="xml">
	         <form string="patients">
			      <sheet>
				       <div>
                            <field name="image" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                            <div class="oe_title">
                               <label for="name" string="N° de dossier médical" class="oe_edit_only"/>
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                        </div>

				  <group col="3">
				     <group>
							<field name="nom"/>
							<field name="sex"/>
							<field name="profession"/>
							<field name="nationalite"/>
							<field name="region"/>
							<field name="commune" style="width:150%"/>
							<field name="phone"/>
					  </group>
					  <group>
							<field name="prenom"/>
							<field name="dob"/>
							<field name="lieunaiss"/>
							<field name="religion"/>
							<field name="province"/>
                            <label for="phonebur" string="Tél. bureau" style="margin-top:25px"/>
							<field name="phonebur" style="margin-top:25px" nolabel="1"/>
					  </group>
					  <group>
							<field name="nomfille"/>
							<field name="date"/>
							<field name="marital_status"/>
                            <label for="departement" string="Département" style="margin-top:33px"/>
							<field name="departement" style="margin-top:33px" nolabel="1"/>
                            <label for="phoneport" string="Tél. portable" style="margin-top:35px"/>
							<field name="phoneport" style="margin-top:35px" nolabel="1"/>
					  </group>
					</group>
				  <group col="3" string="Personne de contact">
				     <group>
							<field name="nomprenomc"/>
					  </group>
					  <group>
							<field name="lienp"/>
					  </group>
					  <group>
							<field name="phonec"/>
					  </group>
					</group>

			<notebook invisible="1">
				<page string="Assurance">
					 <group>
				     <group>
							<field name="idassurance"/>
							<field name="numass"/>
					  </group>
					  <group>
							<field name="dateexp"/>
							<field name="idsociete"/>
					  </group>
					</group>
					<field name="ligne_taux" nolabel="1">
					  <tree string="Taux" editable="bottom">
					    <field name="categorie"/>
						<field name="taux"/>
					  </tree>
					</field>
				</page>
				<page string="Autres informations">
					 <group>
				     <group>
					        <field name="age"/>
							<field name="critical_info"/>
							<field name="general_info"/>
					  </group>
					  <group>
							<field name="deceased"/>
							<field name="dod"/>
							<field name="cod"/>
					  </group>
					</group>
				</page>
			</notebook>
				   </sheet>

                </form>
			</field>
	     </record>
       <record id="view_clinic_company_form" model="ir.ui.view">
            <field name="name">Company.ext</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
