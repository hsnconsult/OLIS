                  <field name="sequencetarif"/>  
                  <field name="sequencecaution"/>  
                  <field name="sequencerel" invisible="1"/>   
                  <field name="sequencetransfert"/> 
				  <field name="sequencerecette" invisible="1"/> 
				  <field name="sequencefacture" invisible="1"/> 
                  <field name="sequencequit"/>
                  <field name="sequencedep"/>
                  <field name="sequencepharma"/>
                  <field name="sequencereception"/>
                  <field name="sequenceechantillon"/>
                  <field name="livraison"/>
                  <field name="reception"/>
                  <field name="location"/>
                  <field name="location_src"/>
                  <field name="location_dest"/>
                </xpath>
            </field>
        </record>
